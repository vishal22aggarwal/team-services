# EditorConfig helps developers define and maintain consistent coding
# styles between different editors and IDEs. See editorconfig.org

root = true

[*]
indent_style             = space
trim_trailing_whitespace = true
insert_final_newline     = true
indent_size = 4
charset = utf-8
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[{*.bat,*.ps1,*.cmd}]
end_of_line = crlf

[{*.yml,*.yaml}]
indent_size = 2
